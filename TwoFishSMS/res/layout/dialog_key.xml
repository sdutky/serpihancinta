<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#282828"
    android:orientation="vertical" >

    <edu.itb.twofishsms.view.HelveticaMediumTextView 
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="22sp"
        tools:ignore="SelectableText" />
    
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <edu.itb.twofishsms.view.HelveticaRegularEditText 
        android:id="@+id/dialog_key_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:ignore="SelectableText" />
    
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
    	
        <Button  
            android:id="@+id/dialog_no_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.495"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:text="Cancel"
	        android:textSize="17sp"
	        android:textColor="@android:color/white"
	        android:background="@android:color/transparent"/>
        
       <View android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.005"
	        android:background="#ffffff"/> 
        
        <Button 
            android:id="@+id/dialog_yes_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.495"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:textSize="17sp"
	        android:text="Decrypt"
	        android:textColor="@android:color/white"
	        android:background="@android:color/transparent"/>
        
    </LinearLayout>
    
</LinearLayout>